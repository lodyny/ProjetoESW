@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
}

    <div class="text-center">
        <img class="logo" src="~/images/iconblack.png" /><br />
        <span class="logo-text">AdotAqui</span>
                    <form method="post" class="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control form-submit btn btn-primary mb-2">Entrar</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-page="./ForgotPassword">Esqueceu a sua palavra-chave?</a>
                            </p>
                        </div>
                    </form>
            </div>
           

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
