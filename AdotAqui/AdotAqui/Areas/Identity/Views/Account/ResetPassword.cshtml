@using AdotAqui.Areas.Identity.Models.AccountViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Alterar palavra-chave";
}
@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="text-center">
    <img class="logo" src="~/images/iconblack.png" /><br />
    <span class="logo-text">AdotAqui</span>
    <form method="post" class="form auth-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="form-control form-submit btn btn-primary mb-2">Alterar</button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

