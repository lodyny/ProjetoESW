@using Microsoft.Extensions.Localization;
@model AdotAqui.Areas.Identity.Models.AccountViewModels.UserViewModel


@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = "Registar";
}

@section Styles {
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
}

<script>
    ToolTip_mail = "@SharedLocalizer["Error_EmailInvalid"]";
    ToolTip_nonalpha = "@SharedLocalizer["Error_NonAlphaNumericRequired"]";
    ToolTip_numreq = "@SharedLocalizer["Error_NumberRequired"]";
    ToolTip_lowreq = "@SharedLocalizer["Error_LowerRequired"]";
    ToolTip_upreq = "@SharedLocalizer["Error_UpperRequired"]";
    ToolTip_pwlng = "@SharedLocalizer["Error_PasswordLengthInvalid"]";
    ToolTip_pw_c = "@SharedLocalizer["Error_PasswordMismatch"]";
    ToolTip_name = "@SharedLocalizer["Error_NameLengthInvalid"]";
    ToolTip_phone = "@SharedLocalizer["Error_PhoneInvalid"]";
</script>

<div class="text-center">
    <span class="logo-text">AdotAqui</span>
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form auth-form">
        <div class="form-group">
            <div class="form-group">
                <input asp-for="Email" class="form-control" id="Email">
                <div id="result_mail" class="result_mail helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input asp-for="PasswordHash" class="form-control" id="Password" />
                <div id="result_pw" class="result_pw helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" />
                <div id="result_pw_c" class="result_pw_c helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" id="Name" />
                <div id="result_name" class="result_name helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div id="datepicker" class="input-group date" data-provide="datepicker" data-date-format="dd-mm-yyyy">
                    <input asp-for="Birthday" class="form-control" type="text" readonly />
                    <span asp-validation-for="Birthday" class="input-group-addon text-danger"><i class="glyphicon glyphicon-calendar"></i></span>
                    <div class="result_bd"></div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" id="Phone"  onchange='validate_num(event)' maxlength="9" />
                <div id="result_pn" class="result_pn helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Label_SignUp"] class="form-control form-submit btn btn-primary mb-2" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/bootstrap/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/jquery/validation.js"></script>
}
