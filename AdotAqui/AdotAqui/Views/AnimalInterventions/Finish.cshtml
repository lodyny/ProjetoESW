@model AdotAqui.Models.Entities.AnimalIntervention
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Label_Edit"];
}

<h2>@SharedLocalizer["Label_FinishTask"]</h2>

<h4>@SharedLocalizer["Label_Interventions"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Finish">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InterventionId" />
            <div class="form-group">
                @SharedLocalizer["Label_Details"]:
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Label_Confirm"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["Label_Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
