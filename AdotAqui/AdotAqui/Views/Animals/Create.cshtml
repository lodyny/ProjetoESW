@model AdotAqui.Models.ViewModels.AnimalViewModel
@using Microsoft.Extensions.Localization;

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Label_CreateAnimal"];
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="~/css/animalcu.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/bootstrap/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/jquery/validation-animal.js"></script>
    <script src="~/lib/jquery/jquery.inputmask.bundle.js"></script>

    <script>
        $(document).ready(function () {
            $("#breed-dropdown").select2({
                theme: "bootstrap",
                placeholder: "@Html.Raw(SharedLocalizer["Label_ChooseBreed"])",
                width: "100%"
            });

            $("#species-dropdown").select2({
                theme: "bootstrap",
                placeholder: "@Html.Raw(SharedLocalizer["Label_ChooseSpecies"])",
                width: "100%"
            });

            $('#species-dropdown').on('select2:select', function (e) {
                $.ajax({
                    url: "GetAnimalBreeds/" + e.params.data.id,
                    dataType: 'json',
                    success: function (jsonData) {
                        $('#breed-dropdown').empty().append(new Option());
                        for (var i = 0, l = jsonData.length; i < l; i++) {
                            var option = jsonData[i];
                            $('#breed-dropdown').append(new Option(option.name, option.breedId));
                        }
                        $('#breed-dropdown').trigger('change');
                    }
                });
            });

            $("#gender-dropdown").select2({
                theme: "bootstrap",
                placeholder: "@Html.Raw(SharedLocalizer["Label_ChooseGender"])",
                width: "100%"
            });

            $('#animalImage').on('change', function () {
                var fileName = $(this).val();
                $(this).next('.custom-file-label').html(fileName.split("\\").pop());
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("image-form").src = e.target.result;
                };
                reader.readAsDataURL(this.files[0]);
            });
        });
    </script>
}

@if (Model.StatusMessage != null)
{
    <partial name="_StatusMessage" model="Model.StatusMessage" />
}

<script>
    ToolTip_name = "@SharedLocalizer["Error_NameLengthInvalid2"]";
</script>

<div class="row w-75 m-auto"><div class="col"><h2>@SharedLocalizer["Label_CreateAnimal"]</h2></div></div>
<form method="post" enctype="multipart/form-data">
    <div class="row w-75 m-auto">
        <div class="col-md-5 v-center">
            <div>
                <img id="image-form" src="https://via.placeholder.com/250x250" />
                <div class="custom-file mt-2">
                    <input type="file" class="custom-file-input" asp-for="Animal.Image" id="animalImage" accept="image/x-png,image/gif,image/jpeg">
                    <label class="custom-file-label" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;" asp-for="Animal.Image">@SharedLocalizer["Label_ChooseFile"]</label>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="form-group">
                <label asp-for="Animal.Name" class="label_text">@SharedLocalizer["Label_Name"]</label>
                <input asp-for="Animal.Name" class="form-control" id="Name" />
                <div id="result_name" class="result_name helper"><font style="margin-right:5px; font-size: 18px; color: orange;"> <b>?</b> </font></div>
                <span asp-validation-for="Animal.Name" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Animal.Breed.SpecieId" class="label_text">@SharedLocalizer["Label_Species"]</label>
                    <select id="species-dropdown" asp-items="@Model.GetSpeciesDropDown()" asp-for="Animal.Breed.SpecieId">
                        <option></option>
                    </select>
                </div>


                <div class="form-group col-md-6">
                    <label asp-for="Animal.Breed.BreedId" class="label_text">@SharedLocalizer["Label_Breed"]</label>
                    <select id="breed-dropdown" asp-for="Animal.Breed.BreedId">
                        <option></option>
                    </select>
                    <span asp-validation-for="Animal.Breed.BreedId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Animal.Gender" class="label_text">@SharedLocalizer["Label_Gender"]</label>
                    <select id="gender-dropdown" asp-for="Animal.Gender">
                        <option></option>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>
                    <span asp-validation-for="Animal.Gender" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Animal.Birthday" class="label_text">@SharedLocalizer["Label_Birthday"]</label>
                    <div id="datepicker">
                        <div class="input-group date">
                            <input asp-for="Animal.Birthday" class="form-control input-group-addon" type="text" readonly>
                            <div class="input-group-append">
                                <span class="input-group-text input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Animal.Birthday" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Animal.Weight" class="label_text">@SharedLocalizer["Label_Weight"]</label>
                    <div class="input-group">
                        <input asp-for="Animal.Weight" input type="text" class="form-control text-left" data-inputmask="'alias': 'numeric' , 'groupSeparator': ',' , 'autoGroup': true , 'digits': 2, 'digitsOptional': true, 'min' : 0, 'max' : 100" />
                        <div class="input-group-append">
                            <span class="input-group-text">kg</span>
                        </div>
                    </div>
                    <span asp-validation-for="Animal.Weight" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Animal.Height" class="label_text">@SharedLocalizer["Label_Height"]</label>
                    <div class="input-group">
                        <input asp-for="Animal.Height" input type="text" class="form-control text-left" data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': true, 'min' : 0, 'max' : 300" />
                        <div class="input-group-append">
                            <span class="input-group-text">cm</span>
                        </div>
                    </div>
                    <span asp-validation-for="Animal.Height" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Animal.Details" class="label_text">@SharedLocalizer["Label_Details"]</label>
                <textarea asp-for="Animal.Details" class="form-control">
                </textarea>
                <span asp-validation-for="Animal.Details" class="text-danger"></span>
            </div>

            <button type="submit" class="form-control form-submit btn btn-success mb-2" style="margin-top:15px;"><i class="fas fa-edit"></i> @SharedLocalizer["Label_SaveChanges"]</button>
        </div>
    </div>

</form>

