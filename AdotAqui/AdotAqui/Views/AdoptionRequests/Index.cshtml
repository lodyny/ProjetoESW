@model IEnumerable<AdotAqui.Models.Entities.AdoptionRequests>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProposalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProposalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Animal.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Birthday)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdoptionRequestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AdoptionRequestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AdoptionRequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
