@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
    </form>
}
else
{
    <a class="btn my-2 my-sm-0 navbutton" asp-area="Identity" asp-page="/Account/Register">Registar</a>
    <a class="btn my-2 my-sm-0 navbutton" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
}


