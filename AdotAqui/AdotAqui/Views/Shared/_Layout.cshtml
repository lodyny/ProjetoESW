<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdotAqui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="~/css/layout.css" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js" charset="UTF-8"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", false)
    <script>
        $(document).ready(function () {
            $("#culture-dropdown").select2({
                theme: "bootstrap",
                minimumResultsForSearch: -1
            });
            @RenderSection("DocumentReadyScripts", required: false)
        });
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a id="navtitle" class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })"><img id="navicon" src="~/images/iconwhite.png" />AdotAqui</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <!--<li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Animais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">Animais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Consultas</a>
                </li>-->
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!--<partial name="_CookieConsentPartial" />-->

    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="page-footer font-small mdb-color pt-4">

        <!-- Footer Links -->
        <div class="container text-center text-md-left">

            <!-- Footer links -->
            <div class="row text-center text-md-left mt-3 pb-3">

                <!-- Grid column -->
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">AdotAqui</h6>
                    <p>
                        Alburgue destinado aos nossos amigos peludos ou não.<br />Sem qualquer fins lucrativos.

                    </p>
                </div>
                <!-- Grid column -->

                <hr class="w-100 clearfix d-md-none">

                <!-- Grid column -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Mapa Site</h6>
                    <p>
                        <a href="#!">Página principal</a>
                    </p>
                    <p>
                        <a href="#!">Registo</a>
                    </p>
                    <p>
                        <a href="#!">Iniciar sessão</a>
                    </p>
                </div>
                <!-- Grid column -->

                <hr class="w-100 clearfix d-md-none">

                <!-- Grid column -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Links Utéis</h6>
                    <p>
                        <a href="https://www.lpda.pt/">Liga Portuguesa dos Direitos do Animal</a>
                    </p>
                    <p>
                        <a href="https://www.mundodosanimais.pt/">Mundo dos Animais</a>
                    </p>
                </div>

                <!-- Grid column -->
                <hr class="w-100 clearfix d-md-none">

                <!-- Grid column -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Contactos</h6>
                    <p>
                        <i class="fas fa-home mr-3"></i> Rua sem nome, Fernão Pires
                    </p>
                    <p>
                        <i class="fas fa-envelope mr-3"></i> geral@adotaqui.com
                    </p>
                    <p>
                        <i class="fas fa-phone mr-3"></i> + 351 234 666 88
                    </p>
                </div>
                <!-- Grid column -->

            </div>
            <!-- Footer links -->

            <hr>

            <!-- Grid row -->
            <div class="row d-flex align-items-center">

                <!-- Grid column -->
                <div class="col-md-7 col-lg-8">

                    <!--Copyright-->
                    <p class="text-center text-md-left">
                        © @System.DateTime.Now.Year Copyright
                        <a href="https://eswapp.azurewebsites.net/">AdotAqui</a>
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-google-plus-g"></i>
                            </a>
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                    </p>

                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-5 col-lg-4 ml-lg-0">
                    <!-- Social buttons -->
                    <div class="text-center text-md-right">

                        <ul class="list-unstyled list-inline">
                            <li class="list-inline-item">@await Html.PartialAsync("_SelectLanguagePartial")</li>
                        </ul>
                    </div>

                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </div>
        <!-- Footer Links -->

    </footer>
    <!-- Footer -->
</body>
</html>
