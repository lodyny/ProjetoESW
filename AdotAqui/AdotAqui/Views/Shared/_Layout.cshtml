<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdotAqui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet"/>
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", false)
    <script>
        $(document).ready(function () {
            $("#culture-dropdown").select2({
                theme: "bootstrap",
                minimumResultsForSearch: -1
            });
            @RenderSection("DocumentReadyScripts", required: false)
        });
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a id="navtitle" class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })"><img id="navicon" src="~/images/iconwhite.png" />AdotAqui</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <!--<li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Animais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">Animais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Consultas</a>
                </li>-->
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!--<partial name="_CookieConsentPartial" />-->

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="container footer border-top">
        <div class="d-flex flex-wrap pt-3">
            <div><span class="align-middle">Engenharia de Software - IPS @System.DateTime.Now.Year</span></div>
            <div class="ml-auto">@await Html.PartialAsync("_SelectLanguagePartial")</div>
        </div>
    </footer>
</body>
</html>
